{
  "name": "Me.yaml",
  "image": "mcr.microsoft.com/devcontainers/go:1.23",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "golang.go",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [5173, 8090],
  "portsAttributes": {
    "5173": {
      "label": "Me.yaml (Frontend)",
      "onAutoForward": "openBrowser"
    },
    "8090": {
      "label": "PocketBase API",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "cd frontend && npm install && npx svelte-kit sync && cd ../backend && go mod tidy && go build -o ../pb_data/me-yaml .",
  "postStartCommand": "chmod +x scripts/start-dev.sh && scripts/start-dev.sh",

  "remoteUser": "vscode"
}
